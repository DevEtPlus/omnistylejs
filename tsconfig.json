{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],

    "jsx": "react",

    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",

    "types": ["node", "jest"]
  },

  "exclude": ["node_modules", "packages/**/dist/**"]
}
